---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/404.svg"
---
<MainLayout title="404 - Page not found">
    <div class="flex flex-col items-center justify-items-center gap-7">
        <Image src={error} alt="not found image - 404" height={350} width={350} class="mt-10"/>
        <h1 class="text-5xl">Page not Found</h1>
        <p class="text-2xl mb-10">Sorry,...</p>
        <a href="/" class="inline-block bg-gray-100 p-2 mt-2 mb-6 hover:bg-indigo-500 hover:text-white">Επιστροφή στην αρχική</a>
        
    </div>
</MainLayout>
 